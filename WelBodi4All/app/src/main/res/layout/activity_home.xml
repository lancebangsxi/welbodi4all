<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary_color"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="30dp"
            android:background="@drawable/bg_rounded_crdview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/drwerBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="15dp"
            android:background="@drawable/bg_circular_btn"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_menu_24"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <ImageButton
            android:id="@+id/notifyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@color/transparent"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_notifications_24"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/saluteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning,"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/usernameTV"
            app:layout_constraintStart_toStartOf="@+id/usernameTV" />

        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Mr. John Smith"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Your Health, Our Mission"
            android:textStyle="italic"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/online_doctor"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/itmView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_rounded_crdview_wht"
            app:layout_constraintBottom_toTopOf="@id/itmView3"
            app:layout_constraintEnd_toStartOf="@+id/itmView2"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ai_doctor"
            app:layout_constraintBottom_toBottomOf="@+id/itmView1"
            app:layout_constraintEnd_toEndOf="@+id/itmView1"
            app:layout_constraintStart_toStartOf="@+id/itmView1"
            app:layout_constraintTop_toTopOf="@+id/itmView1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Doctor"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/itmView1"
            app:layout_constraintEnd_toEndOf="@+id/itmView1"
            app:layout_constraintStart_toStartOf="@+id/itmView1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/itmView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"

            android:background="@drawable/bg_rounded_crdview_wht"
            app:layout_constraintBottom_toBottomOf="@+id/itmView1"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toEndOf="@id/itmView1"
            app:layout_constraintTop_toTopOf="@+id/itmView1"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/health_insurance"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/itmView2"
            app:layout_constraintEnd_toEndOf="@+id/itmView2"
            app:layout_constraintStart_toStartOf="@+id/itmView2"
            app:layout_constraintTop_toTopOf="@+id/itmView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Symptom Checker"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/itmView2"
            app:layout_constraintEnd_toEndOf="@+id/itmView2"
            app:layout_constraintStart_toStartOf="@+id/itmView2" />


        <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/itmView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
                android:background="@drawable/bg_rounded_crdview_wht"
                app:layout_constraintEnd_toEndOf="@+id/itmView2"
                app:layout_constraintBottom_toTopOf="@id/itmView4"
                app:layout_constraintStart_toStartOf="@+id/itmView1"
                app:layout_constraintTop_toBottomOf="@+id/itmView1" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/online_consultation"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/itmView3"
            app:layout_constraintEnd_toEndOf="@+id/itmView3"
            app:layout_constraintStart_toStartOf="@+id/itmView3"
            app:layout_constraintTop_toTopOf="@+id/itmView3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Contact Health Practitioner"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/itmView3"
            app:layout_constraintEnd_toEndOf="@+id/itmView3"
            app:layout_constraintStart_toStartOf="@+id/itmView3" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/itmView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_rounded_crdview_wht"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="@+id/itmView1"
            app:layout_constraintStart_toStartOf="@+id/itmView1"
            app:layout_constraintTop_toBottomOf="@+id/itmView3" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            android:src="@drawable/woman_working"
            app:layout_constraintBottom_toBottomOf="@+id/itmView4"
            app:layout_constraintEnd_toEndOf="@+id/itmView4"
            app:layout_constraintStart_toStartOf="@+id/itmView4"
            app:layout_constraintTop_toTopOf="@+id/itmView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Health Guidlines"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/itmView4"
            app:layout_constraintEnd_toEndOf="@+id/itmView4"
            app:layout_constraintStart_toStartOf="@+id/itmView4" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/itmView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_rounded_crdview_wht"
            app:layout_constraintBottom_toBottomOf="@+id/itmView4"
            app:layout_constraintEnd_toEndOf="@+id/itmView2"
            app:layout_constraintStart_toStartOf="@+id/itmView2"
            app:layout_constraintTop_toTopOf="@+id/itmView4" />


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/medication_schedule"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/itmView5"
            app:layout_constraintEnd_toEndOf="@+id/itmView5"
            app:layout_constraintStart_toStartOf="@+id/itmView5"
            app:layout_constraintTop_toTopOf="@+id/itmView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Book Appointment"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/itmView5"
            app:layout_constraintEnd_toEndOf="@+id/itmView5"
            app:layout_constraintStart_toStartOf="@+id/itmView5" />

        <!--            BottomNav-->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>